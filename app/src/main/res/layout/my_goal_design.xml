<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/my_goal_background"
            android:weightSum="100" android:baselineAligned="false">

            <LinearLayout
                android:layout_weight="20"
                android:id="@+id/my_goal_box_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/my_goal_box_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_display_semibold"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:textSize="15dp"
                    android:text="Family. Love. Kids"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/my_goal_box_description"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:height="40dp"
                    android:fontFamily="@font/sf_dsiplay_light"
                    android:gravity="start"
                    android:paddingStart="8dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="8dp"
                    android:text="Seek out mentors who can guide personal and professional development"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/my_goal_box_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="80"
                android:id="@+id/my_goal_box_layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/my_goal_box_days"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/goal_design"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:paddingStart="0dp"
                    android:text="10 Days"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/my_goal_box_description"
                    app:layout_constraintTop_toTopOf="parent"
                    app:drawableEndCompat="@drawable/my_goal_done_button" />

                <TextView
                    android:id="@+id/my_goal_box_status"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/my_goal_done_button"
                    android:foregroundGravity="center"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:paddingStart="0dp"
                    android:text="Completed"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/my_goal_box_days" />

            </LinearLayout>



        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>