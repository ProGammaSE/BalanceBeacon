<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="2sp">

        <TableLayout
            android:gravity="center"
            android:id="@+id/main_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <TableRow android:id="@+id/table_data_row">

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/table_data_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_display_medium"
                    android:padding="10sp"
                    android:text="Personal Growth"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/table_data_current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_display_medium"
                    android:padding="10sp"
                    android:text="6"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/table_data_future"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_display_medium"
                    android:padding="10sp"
                    android:text="10"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/table_data_gap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_display_medium"
                    android:padding="10sp"
                    android:text="4"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </TableRow>
        </TableLayout>

    </RelativeLayout>

</ScrollView>

